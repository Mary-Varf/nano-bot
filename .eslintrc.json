{
    "extends": [
        "eslint:recommend",
        "plugin:import/errors",
        "plugin:react/recommend",
        "plugin:jsx-a11y/recommend",
        "prettier"
    ],
    "plugins": ["react", "jsx-a11y", "import"],
    "rules": {
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-filename-extension": [ "warn", {"extensions": [".tsx"]} ]
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}